<form action="/login" method="POST" class="p-5 border border2 bg-primary-subtle">
  <h4 class="container text-center">login with your info</h4>
  <%- include("../partials/errors.ejs") %>
  <div class="form-group  pb-3">
    <label for="email">Enter Your Email</label>
    <input
      type="email"
      name="email"
      id="email"
      class="form-control"
      value="<%= oldInput.email ? oldInput.email : '' %>"
      placeholder="Enter your email"
      required
    />
  </div>
  <div class="form-group  pb-3">
    <label for="images">Enter Your password</label>
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="Enter your password"
      required
    />
  </div>
  <input
      type="submit"
      value="Sign In"
      class="form-control"
    />
</form>

