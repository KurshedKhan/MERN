<%- include("../partials/BasicTopCode") %> <%- include("../partials/nav") %>

<form action="/signUp" method="POST" class="p-5 border border2 bg-primary-subtle">
  <h4 class="container text-center">Register as a new User</h4>
    <%- include("../partials/errors.ejs") %>
  <div class="form-group  pb-3">
    <label for="price">Enter Your First Name</label>
    <input
      type="text"
      name="firstName"
      value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
      class="form-control"
      placeholder="Enter your first name..."
      required
    />
  </div>
  <div class="form-group  pb-3">
    <label for="price">Enter Your Last Name</label>
    <input
      type="text"
      name="lastName"
      value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
      class="form-control"
      placeholder="Enter your last name"
    />
  </div>
  <div class="form-group  pb-3">
    <label for="price">Enter Your Email</label>
    <input
      type="text"
      name="email"
      value="<%= oldInput.email ? oldInput.email : '' %>"
      class="form-control"
      placeholder="test@coding.com"
      required
    />
  </div>
  <div class="form-group  pb-3">
    <label for="images">Enter Your password</label>
    <input
      type="password"
      name="password"
      class="form-control"
      value="<%= oldInput.password ? oldInput.password : '' %>"
      placeholder="Enter your password"
      required
    />
  </div>
  <div class="form-group  pb-3">
    <label for="images">Enter Your confirm password</label>
    <input
      type="password"
      name="ConfirmPassword"
      class="form-control"
      placeholder="Enter your confirm password"
      required
    />
  </div>
  <div>
    <span>User Type</span><br>
    <label>
      <input type="radio" name="userType" value="Guest" id="Guest" checked="<% oldInput.userType === 'Guest' %>"><span>Guest</span>
    </label>
    <label>
      <input type="radio" name="userType" value="Host" id="Host" checked="<% oldInput.userType === 'Host' %>"><span>Host</span>
    </label>
  </div><br>
  <div>
    <input type="checkbox" name="terms" id="terms">
    <label for="terms">I agree to the terms and condition</label>
  </div>
  <input
      type="submit"
      value="Register"
      class="form-control"
    />
</form>

<%- include("../partials/footer") %>
